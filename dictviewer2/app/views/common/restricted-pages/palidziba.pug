extends ../layout

mixin if_not_public
  if app_mode === APP_MODE.EDITOR
    block

block append header_scripts
  +if_not_public
    link(type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap/dist/css/bootstrap.min.css")
  link(rel="stylesheet" href="//use.fontawesome.com/releases/v5.8.1/css/all.css")
  style.
    h2 {
      margin-top: 2rem;
    }
    h2 {
      font-size: 1.4em;
    }
    h3 {
      font-size: 1.2em;
    }
    th, td {
      padding: 0.3rem;
    }
    .biblio {
      font-weigth: 300;
      vertical-align: top;
    }
    .spacer {
      width: 15px;
      text-align: center;
      vertical-align: top;
    }
    .code {
      font-weight: 400;
      width: 25px;
      vertical-align: top;
    }
    .term {
      width: 200px;
      vertical-align: top;
    }
    dd {
      margin-bottom: 0;
    }
    dt {
      margin-top: 0.4em;
    }

