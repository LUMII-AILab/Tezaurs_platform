        +entryHeader({ lemma: 'kratīšana', inflection: '', flagText: 'sieviešu dzimte, lietvārds', pronunciation: '' })
        +sense({ senseNo: '1', gloss: 'Darbība, process → kratīt.' })
        +sense({ senseNo: '2', gloss: 'Izmeklēšanas darbība – personu, telpu pārmeklēšana, lai atrastu pierādījumus, kuriem ir nozīme krimināllietā.' })
