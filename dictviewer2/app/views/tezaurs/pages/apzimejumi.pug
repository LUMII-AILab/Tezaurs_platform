extends ../../common/layout

mixin if_not_public
  if app_mode === APP_MODE.EDITOR
    block

block append header_scripts
  +if_not_public
    link(type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap/dist/css/bootstrap.min.css")
  link(rel="stylesheet" href="//use.fontawesome.com/releases/v5.8.1/css/all.css")
  style.
    h2 {
      margin-top: 2rem;
    }
    h2 {
      font-size: 1.4em;
    }
    h3 {
      font-size: 1.2em;
    }
    th, td {
      padding: 0.3rem;
    }
    .biblio {
      font-weigth: 300;
      vertical-align: top;
    }
    .spacer {
      width: 15px;
      text-align: center;
      vertical-align: top;
    }
    .code {
      font-weight: 400;
      width: 25px;
      vertical-align: top;
    }
    .term {
      width: 200px;
      vertical-align: top;
    }
    dd {
      margin-bottom: 0;
    }
    dt {
      margin-top: 0.4em;
    }


block content
  include ../../common/includes/entry-constants

  h1 Apzīmējumi

  table
    //- tr
      td.code //
      td.spacer –
      td.biblio nozīmes nianse
    //- tr
      td.code ⟡
      td.spacer –
      td.biblio idioma
    //- tr
      td.code ●
      td.spacer –
      td.biblio taksons (auga vai dzīvnieka kategorijas nosaukums)
    //- tr
      td.code △
      td.spacer –
      td.biblio stabils vārdu savienojums
    //- tr
      td.code ○
      td.spacer –
      td.biblio piemērs, ja tam ir avots
    tr
      td.code
      td.spacer
      td.biblio
    tr
      td.code `
      td.spacer –
      td.biblio krītošā intonācija
    tr
      td.code ^
      td.spacer –
      td.biblio lauztā intonācija
    tr
      td.code ~
      td.spacer –
      td.biblio stieptā intonācija
    tr
      td.code '
      td.spacer –
      td.biblio zilbes uzsvars (ne pirmajā zilbē)
    tr
      td.code ȩ
      td.spacer –
      td.biblio platais #[em e]

  //- -
    const ENTRY_WORD_COLOR = '#000000';
    const PRIMARY_LEXEME_COLOR = '#4A50A0';
    const MAIN_LEXEME_COLOR = '#7490C0';
    const DERIVATED_LEXEME_COLOR = '#0B7A75';
    const ALTERNATIVE_SPELLING_LEXEME_COLOR = '#99B2DD';
    const SUPPLEMENTAL_LEXEME_COLOR = '#BBAB8B';

  h2 Šķirkļa leksēmu krāsa

  table(style='width: 600px')
    tr
      td.term(style=`color: ${ENTRY_WORD_COLOR}; font-weight: bold`) Šķirkļvārds
      td.biblio šķirkļa nosaukums.
    tr
      td.term(style=`color: ${MAIN_LEXEME_COLOR}; font-weight: bold`) Pamatleksēma
      td.biblio galvenā vārda pamatforma jeb leksēma.
    tr
      td.term(style=`color: ${DERIVED_LEXEME_COLOR}; font-weight: bold`) Atvasinājums
      td.biblio no galvenās vārda pamatformas atvasināta vārda pamatforma, kas var būt arī citas vārdšķiras vārds.
    tr
      td.term(style=`color: ${ALTERNATIVE_SPELLING_LEXEME_COLOR}; font-weight: bold`) Rakstības variants
      td.biblio galvenā vārda pamatformas variants, kāds var parādīties tekstos vai citā valodas lietojumā.
    tr
      td.term(style=`color: ${ALTERNATIVE_SPELLING_DERIVATIVE_LEXEME_COLOR}; font-weight: bold`) Rakstības varianta atvasinājums
      td.biblio no rakstības varianta atvasināta vārda pamatforma, kas var būt arī citas vārdšķiras vārds.
    tr
      td.term(style=`color: ${ABBREVIATION_LEXEME_COLOR}; font-weight: bold`) Saīsinājums
      td.biblio burts, burtkopa (ar vai bez punkta), kas veidota, paņemot tikai vārda sākotnējo burtu vai samazinot burtu skaitu vārdā, bieži pieliekot klāt punktu; vai arī abreviatūra, ko veido no vārdu savienojumā esošo vārdu pirmajiem burtiem vai vārdu pirmajām daļām.
    tr
      td.term(style=`color: ${SUPPLEMENTAL_LEXEME_COLOR}; font-weight: bold`) Cita papildu leksēma
      td.biblio ar šķirkli saistīta vārda pamatforma.

  //- div(style='color: #3A405A; font-weight: bold') Pamatleksēma (izņemot sakrītoša ar šķirkļvārdu)
  //- div(style=`color: ${PRIMARY_LEXEME_COLOR}; font-weight: bold`) Galvenā leksēma

